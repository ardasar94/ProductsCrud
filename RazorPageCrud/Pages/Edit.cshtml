@model RazorPageCrud.Pages.EditModel
@{
}

<h1>Ürün Düzenle - @Model.Urun.UrunAd</h1>

<form method="post">
    <div asp-validation-summary="All"></div>
    <input type="hidden" asp-for="Urun.Id" />
    <div class="form-group">
        <input asp-for="Urun.UrunAd" class="form-control mr-2" placeholder="Ad" />
        <span asp-validation-for="Urun.UrunAd"></span>
    </div>
    <div class="form-group">
        <input asp-for="Urun.BirimFiyat" class="form-control mr-2" placeholder="Birim Fiyat" />
        <span asp-validation-for="Urun.BirimFiyat"></span>
    </div>
    <button class="btn btn-primary">Ekle</button>
</form>