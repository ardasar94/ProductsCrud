@page
@model RazorPageCrud.Pages.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Home page";
}

<div class="Container">
    <form method="post">
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Ad</th>
                    <th>Birim Fİyatı</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var urun in Model.Urun)
                {
                <tr>
                    <td> @urun.Id  </td>
                    <td>@urun.UrunAd</td>
                    <td>@urun.BirimFiyat</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@urun.Id">Düzenle</a> |
                        <button type="submit" asp-page-handler="delete"
                                asp-route-id="@urun.Id" class="btn btn-danger btn-sm">
                            Sil
                        </button>
                    </td>
                </tr>
                }
            </tbody>
        </table>
        <a asp-page="Create">Yeni Oluştur</a>
    </form>
</div>
